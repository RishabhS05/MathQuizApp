<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="display_question_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:padding">@dimen/paddings</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="display_question">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:padding">@dimen/paddings</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="option_radio_btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:padding">@dimen/paddingbtn</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textStyle">normal|italic</item>
    </style>
</resources>
